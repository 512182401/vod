<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/rl_top_search"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@color/app_red"
              android:gravity="center"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/back_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:src="@mipmap/login_back_last"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_both_red_white"
        >

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/selector_book_item"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@mipmap/search"/>

        <com.changxiang.vod.common.view.CustomEditText
            android:id="@+id/emoji_edit"
            style="@style/editext_nodelet2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableRight="@mipmap/text_clear"
            android:hint="@string/search_hint"
            android:maxLength="12"
            android:minHeight="32dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="@color/text_2e"
            android:textColorHint="@color/et_hint"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/imv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_book_item"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/voice"
                />

            <ImageView
                android:id="@+id/emoji_btn_lighted"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_book_item"
                android:padding="2dip"
                android:scaleType="centerInside"
                android:visibility="gone"
                />
            <!--android:src="@drawable/chatting_biaoqing_btn_lighted"-->
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="7dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/back_next_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:text="导出"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
    </LinearLayout>
</LinearLayout>


