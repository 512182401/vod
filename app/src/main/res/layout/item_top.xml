<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/app_red">

    <ImageView
        android:id="@+id/back_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:src="@mipmap/login_back_last"

        />

    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="居中显示"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_payering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@mipmap/personal_message_top"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/back_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@mipmap/personal_message_top"
            android:visibility="gone" />
        <!-- android:visibility="gone"-->
        <TextView
            android:id="@+id/back_next_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:text="导出"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/action_white_spot"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />
    <!--android:background="@drawable/shape_personal_right_top_msg_white"-->

</RelativeLayout>
