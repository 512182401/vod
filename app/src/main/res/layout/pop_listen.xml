<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/listen_bg">

    <TextView
        android:id="@+id/popup_listen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="@string/ear_listen"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <com.quchangkeji.tosing.common.view.SwitchView
        android:id="@+id/pop_listen_switch"
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:layout_toRightOf="@+id/popup_listen_text"
        android:layout_marginLeft="70dip"
        android:layout_marginRight="15dp"/>

</RelativeLayout>